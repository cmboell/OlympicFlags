@model CountryListViewModel
@{
    ViewData["Title"] = "NFL Teams";
}
<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category cat in Model.Categories) {
                <a asp-action="Index"
                   asp-route-ActiveCategory="@cat.CategoryId"
                   asp-route-ActiveGame="@Model.ActiveGame"
                   class="list-group-item 
                       @Model.CheckActiveCategory(cat.CategoryId)">@cat.Name</a>
            }
        </div>
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games) {
                <a asp-action="Index"
                   asp-route-ActiveCategory="@Model.ActiveCategory"
                   asp-route-ActiveGame="@game.GameId"
                   class="list-group-item 
                       @Model.CheckActiveGame(game.GameId)">@game.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button type="submit" class="bg-white border-0">
                            <img src="~/images/@country.LogoImage" alt="@country.Name"
                                 title="@country.Name | @country.Category.Name @country.Game.Name" />
                        </button>

                        <input type="hidden" asp-for="@country.CountryId" />
                        <input type="hidden" asp-for="ActiveCategory" />
                        <input type="hidden" asp-for="ActiveGame" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>