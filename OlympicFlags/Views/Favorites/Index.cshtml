@model CountryListViewModel
@{
    ViewData["Title"] = "Favorites";
}
<!--favorites page view-->
<div class="text-center">
    <h2>My Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary"
           asp-route-activeCategory="@Model.ActiveCategory"
           asp-route-activeGame="@Model.ActiveGame"
           asp-route-activeSport="@Model.ActiveSport">
            Back to Home Page <!--button that takes you back to homepage-->
        </a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites <!--button that allows you to clear favorites-->
        </button>
    </form>
    <br />
</div>


<div class="row">                    <!--code to list favorite country/teams-->
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Country country in Model.Countries) 
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="~/images/@country.LogoImage" alt="" />
                        </div>
                        <div class="col-sm-4">
                            @country.Name
                        </div>
                        <div class="col-sm-4">
                            @country.Category.Name @country.Game.Name @country.Sport.Name
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>